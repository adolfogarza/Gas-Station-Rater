<div class="panel panel-default center-block">
<div class="panel-heading" align="center">Lista de Sucursales</div>
  <div class="panel-body"> 
    <table>
      <thead>
        <tr>
          <th>Nombre de la sucursal</th>
          <th>Direcci&oacute;n Fiscal</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @stations.each do |station| %>
          <tr>
            <td><%= station.legal_name.titleize %></td>
            <td><%= station.location.address.titleize %></td>
            <td>
              <%= link_to station, class: "btn btn-default" do %>
                <i class="glyphicon glyphicon-eye-open"></i>
              <% end %>
              <% if current_user.privileges == 1 %>
                <%= link_to edit_station_path(station), class: "btn btn-default" do %>
                    <i class="glyphicon glyphicon-pencil"></i>
                <% end %>
                <%= link_to station, method: :delete, data: { confirm: t('views.messages.deletion').html_safe }, class: "btn btn-default" do %>
                    <i class="glyphicon glyphicon-trash"></i>
                <% end %>
              <% else %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
  </div>
</div>