  <div class="panel panel-default edit_account">

    <div class="panel-heading"><%= t('views.users.edit.right_title').html_safe %></div>
    <div class="panel-body">
      <%= form_for @user do |f| %>
        <% if @user.errors.any? %>
          <div class="error_messages left">     
            <ul>
              <% for message in @user.errors.full_messages %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <hr>
        <p><%= t('views.users.edit.info').html_safe %></p>
        <hr>
        <p>
          <%= f.label :name, t('views.users.create.name').html_safe %><br />
          <%= f.text_field :name, class: "form-control" %>
        </p>  
        <p>
          <%= f.label :lastname, t('views.users.create.lastname').html_safe  %><br />
          <%= f.text_field :lastname, class: "form-control" %>
        </p>
        <p>
          <%= f.label :email, t('views.users.create.email').html_safe %><br />
          <%= f.text_field :email, class: "form-control" %>
        </p>
        <p>
          <%= f.label :password, t('views.users.create.password').html_safe %><br />
          <%= f.password_field :password, class: "form-control" %>
        </p>
        <hr>
        <p class="button"><%= submit_tag t('views.users.create.update_button').html_safe, class: "btn btn-primary"%></p>
        <hr>
        <%= link_to delete_path, data: { confirm: t('views.messages.deletion').html_safe }, class: "btn btn-danger" do %>
          <i class="glyphicon glyphicon-trash"></i>
        <% end %>
      <% end %>
    </div>
  </div>