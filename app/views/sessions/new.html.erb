<div class="panel panel-default mypanel center center-block">
  <div class="panel-heading">
    <h1><%= t('views.sessions.create.page_title').html_safe %></h1>
  </div>
  <div class="panel-body">
    <%= form_tag sessions_path do %>
      <div class="form-group">
        <p>
          <%= label_tag :email, t('views.sessions.create.email').html_safe %><br>
          <%= text_field_tag :email, params[:email], class: "form-control" %>
        </p>
      </div>
      <div class="form-group">
        <p>
          <%= label_tag :password, t('views.sessions.create.password').html_safe %><br>
          <%= password_field_tag :password, params[:password], class: "form-control"%>
        </p>
      </div> 
      <p class="button"><%= submit_tag t('views.sessions.create.submit_button').html_safe, class: "btn btn-primary" %></p>
    <% end %>
  </div>
</div>