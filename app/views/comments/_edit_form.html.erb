<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation" align="left">
      <ul>
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label t('views.comments.title') %><br>
    <%= f.text_field :title, class: "form-control"%>
  </div>
  <div class="field">
    <%= f.label t('views.comments.description') %><br>
    <%= f.text_area :description, class: "form-control"%>
  </div>
  <br>
  <%= f.fields_for :rating do |jj| %>
    <%= jj.label "Honestidad: " %><br>
    <div class="field">
      <%= jj.hidden_field :honesty,:id=>"honesty_field" %>
    </div>
    <div id="honesty_star"></div>
    <%= jj.label "Velocidad de Servicio: " %><br>
    <div class="field">
    <%= jj.hidden_field :speed_service,:id=>"speed_field" %>
    </div>
    <div id="speed_star"></div>
    <%= jj.label "Atencion al Cliente: " %><br>
    <div class="field">
    <%= jj.hidden_field :customer_service,:id=>"customer_field" %>
    </div>
    <div id="customer_star"></div>

  <% end %>
  <br>
  <div class="actions" align="right">
    <%= f.button t("Editar Comentario"), class: "btn btn-primary"%>
  </div>
  <br>
  <hr>  
    <%= link_to 'Ver Comentario', @comment %> |
    <%= link_to 'Regresar', root_path %>
<% end %>
</div>

<script>
  $('#honesty_star').raty({
    path: '/assets',
       click: function(score, evt) {
    $(document).ready(function(){
        $("#honesty_field").val(score);
   });
    }
  });

  $('#speed_star').raty({
    path: '/assets',
       click: function(score, evt) {
    $(document).ready(function(){
        $("#speed_field").val(score);
   });
    }
  });

  $('#customer_star').raty({
    path: '/assets',
       click: function(score, evt) {
    $(document).ready(function(){
        $("#customer_field").val(score);
   });
    }
  });
</script>